{
    "prettier.requireConfig": true,
    "prettier.trailingComma": "none",
    "prettier.tabWidth": 2,
    "[typescript]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "explicit",
            "source.fixAll.tslint": "explicit",
            "source.fixAll.stylelint": "explicit"
        }
    }
}