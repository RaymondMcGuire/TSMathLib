{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"strict": true,
		"incremental": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"outDir": "out"
	},
	"include": ["src/**/*.ts"]
}